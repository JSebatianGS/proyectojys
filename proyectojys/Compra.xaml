<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectojys.Compra">
    <ContentPage.Content>
        <StackLayout Padding="10,12">
            
            <Label Text="Compro" FontSize="30" HorizontalOptions="Center" TextColor="Black"></Label>
            <Label Text="{Binding Name}" VerticalOptions="Center" FontSize="35" HorizontalOptions="Center" TextColor="Black"> </Label>
            <Label Text="Cantidades de nuestros productos" FontSize="25" HorizontalOptions="Center" TextColor="Black"></Label>
            <Image Source="Img1.jpg" WidthRequest="200" HeightRequest="200" ></Image>
            <StackLayout Orientation="Horizontal">
                <Button Text="Volver a Comprar" x:Name="Regresar" HorizontalOptions="EndAndExpand"></Button>
            </StackLayout>
        </StackLayout> 
    </ContentPage.Content>
</ContentPage>